{ // 所有匹配都是忽略大小写的！！！
	"Search": { // 搜索设置，在每一次搜索生效
		"AudioExtensions": [
			".aac",
			".ape",
			".flac",
			".m4a",
			".mp3",
			".ogg",
			".wav",
			".wma"
		], /* 会被识别为歌曲的扩展名
	        如果你的歌曲没有被识别到，请检查这里是否出现了你的歌曲的文件扩展名
				  目前在用的音频文件信息读取类库的开发水平似乎不太高，设计得不是特别好，有些功能也没有，比如没法判断是否为一个音频文件 */
		"Separators": "|;,/\\&:", // 分隔符，用于分割歌手名
		"WholeWordReplace": {
			"sh0ut": "shØut",
			"あやぽんず＊": "あやぽんず*"
		} // 前面是被替换的词，后面是要替换成的词，比如歌名"sh0ut"，搜索的时候会被替换成"shØut"来搜索，网易云音乐部分歌曲歌手名收录有问题，只能这么办
	},
	"Fuzzy": { // 第一次搜不到或者匹配失败的情况下，是否进行模糊搜索与匹配
		"IsEnabled": true,
		"TryIgnoringExtraInfo": true, // 忽略 括号+Cover 和 feat. 之后的内容，支持的括号类型在Filter.OpenBrackets里
		"TryIgnoringArtists": true, // 忽略艺术家
		"OpenBrackets": "([{（［｛【〖", // 这些左括号之后的内容会被过滤，注意，不要随便修改这里的内容，可能导致过滤准确性降低
		"Covers": [
			"Cover",
			"カバー"
		] // Cover的各种写法
	},
	"Match": { // 匹配设置，在搜索到歌曲信息之后，程序会通过自己的算法再次确认是否匹配
		"MinimumSimilarity": 0.85, // 最小相似度，0~1
		"CharReplace": {
			"\u00B7": "\u002e",
			"\u0387": "\u002e",
			"\u05BC": "\u002e",
			"\u2022": "\u002e",
			"\u2027": "\u002e",
			"\u2219": "\u002e",
			"\u22C5": "\u002e",
			"\u30FB": "\u002e",
			"\uFF0E": "\u002e",
			"\uFF65": "\u002e",
			// 以上是"·"的相似字符，全部被替换成"."
			"\uFF0A": "\u002A",
			// 以上是"*"的相似字符
			"\uFF01": "\u0021"
			// 以上是"!"的相似字符
		} // 前面是被替换的字符，后面是要替换成的字符，只支持单个字符替换，意思就是一个文字，多个文字会报错
	}
}
